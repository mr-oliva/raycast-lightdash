{
  "name": "lightdash",
  "title": "Lightdash",
  "description": "Search Lightdash dashboards and charts",
  "icon": "extension-icon.png",
  "author": "raycast",
  "categories": ["Data"],
  "platforms": ["macOS"],
  "license": "MIT",
  "commands": [
    {
      "name": "search",
      "title": "Search Lightdash",
      "description": "Search dashboards and charts in Lightdash",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "baseUrl",
      "title": "Lightdash URL",
      "description": "Your Lightdash instance URL (e.g. https://app.lightdash.cloud)",
      "type": "textfield",
      "required": true,
      "placeholder": "https://app.lightdash.cloud"
    },
    {
      "name": "apiKey",
      "title": "API Key",
      "description": "Your Lightdash Personal Access Token",
      "type": "password",
      "required": true
    },
    {
      "name": "defaultProjectUuid",
      "title": "Default Project UUID",
      "description": "UUID of the default project to search in",
      "type": "textfield",
      "required": false,
      "placeholder": "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.93.3",
    "@raycast/utils": "^1.19.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.11",
    "@types/node": "22.13.4",
    "@types/react": "19.0.8",
    "eslint": "^8.57.0",
    "typescript": "^5.7.3",
    "vitest": "^3.0.0"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "lint": "ray lint",
    "lint:fix": "ray lint --fix",
    "lint:ci": "eslint src/ --max-warnings 0",
    "test": "vitest run",
    "test:watch": "vitest"
  }
}
